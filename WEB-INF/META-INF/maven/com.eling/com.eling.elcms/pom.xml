	<modelVersion>4.0.0</modelVersion>
	<artifactId>com.eling.elcms</artifactId>
	<packaging>war</packaging>
	<version>1.20.7.13</version>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<escapeString>\</escapeString>
					<attachClasses>true</attachClasses>
					<archiveClasses>${app.build.archiveClasses}</archiveClasses>
					<packagingExcludes>${app.packagingExcludes}</packagingExcludes>
 					<webResources>
                		<resource>
							<directory>src/main/webapp/WEB-INF/config</directory>
							<targetPath>WEB-INF/config</targetPath>
							<filtering>${app.build.filtering}</filtering>
						</resource>
						
					</webResources>
					<overlays>
 						<overlay>
							<groupId>com.eling</groupId>
							<artifactId>com.eling.elcms.system-web</artifactId>
							<skip>${app.build.overlay.skip}</skip>
							<includes>
								<include>WEB-INF/config/</include>
								<include>assets/config/</include>
								<include>mobile/requirejs/</include>
							</includes>
							<filtered>${app.build.filtering}</filtered>
						</overlay>
 						<overlay>
							<groupId>com.eling</groupId>
							<artifactId>com.eling.elcms.system-web</artifactId>
							<skip>${app.build.overlay.skip}</skip>
							<excludes>
								<exclude>WEB-INF/config/</exclude>
								<exclude>assets/config/</exclude>
								<exclude>mobile/requirejs/</exclude>
							</excludes>
						</overlay>
						
					</overlays>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>hibernate3-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<components>
						<component>
							<name>hbm2ddl</name>
							<implementation>annotationconfiguration</implementation>
							<!-- Use 'jpaconfiguration' if you're using JPA. -->
							<!--<implementation>jpaconfiguration</implementation> -->
						</component>
					</components>
					<componentProperties>
						<drop>true</drop>
						<jdk5>true</jdk5>
						<propertyfile>${project.build.outputDirectory}/jdbc.properties</propertyfile>
						<outputfilename>ddl.sql</outputfilename>
					</componentProperties>
				</configuration>
				<executions>
					<!-- 先屏蔽掉建表过程，太慢
					<execution>
						<phase>process-test-resources</phase>
						<goals> 
							<goal>hbm2ddl</goal>
						</goals>
					</execution> -->
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<excludes><exclude>**/*.xlsx</exclude></excludes>
			</resource>
			<resource>
				<directory>src/main/java</directory>
				<filtering>false</filtering>
				<includes><include>**/*.xlsx</include></includes>
			</resource>
		</resources>
	</build>

